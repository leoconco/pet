<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Web Pet</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.greenapple.security.AuthenticationFilter</filter-class>
        <init-param>
            <param-name>login_page</param-name>
            <param-value>/login.html</param-value>
        </init-param>
        <init-param>
            <param-name>redirect_page</param-name>
            <param-value>/redirect.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>logout_url</param-name>
            <param-value>/_logout</param-value>
        </init-param>
        <init-param>
            <param-name>public_url</param-name>
            <param-value>/public/</param-value>
        </init-param>
        <init-param>
            <param-name>openid_select</param-name>
            <param-value>/_openid_selector</param-value>
        </init-param>
        <init-param>
            <param-name>openid_url_param</param-name>
            <param-value>_openid_url</param-value>
        </init-param>
        <init-param>
            <param-name>proxyurl_param</param-name>
            <param-value>proxyserver01.bog.corp.globant.com</param-value>
        </init-param>
        <init-param>
            <param-name>proxyport_param</param-name>
            <param-value>3128</param-value>
        </init-param>

    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>